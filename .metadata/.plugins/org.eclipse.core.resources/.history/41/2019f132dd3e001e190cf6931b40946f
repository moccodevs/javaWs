public class Dibujo1 extends JPanel {
	Graphics g;
    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        
        // Realiza aqu√≠ tus operaciones de dibujo
        g.drawLine(502, 50, 200, 200);
        g.drawRect(100, 100, 150, 100);
        g.drawOval(250, 50, 100, 100);
    }
    
    public void generarDibujo(int x1,int y1,int x2,int y2) {
        g.drawLine(502, 50, 200, 200);
        g.drawRect(100, 100, 150, 100);
        g.drawOval(250, 50, 100, 100);
    	
    }
    
}